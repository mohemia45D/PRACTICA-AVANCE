CREATE DATABASE PRACTICAS;

USE PRACTICAS;

CREATE TABLE CLIENTES(
IDCLIENTE INT NOT NULL AUTO_INCREMENT,
NOMBRE VARCHAR(15) NOT NULL,
DOMICILIO VARCHAR(15) NOT NULL,
TELEFONO INT NOT NULL,
PRIMARY KEY(IDCLIENTE)
);

CREATE TABLE EMPLEADOS(
IDEMPLEADO INT NOT NULL AUTO_INCREMENT,
NOMBRE VARCHAR(15) NOT NULL,
APELLIDOS VARCHAR(15) NOT NULL,
DOMICILIO VARCHAR(15) NOT NULL,
TELEFONO INT NOT NULL,
CORREO VARCHAR(15) NOT NULL,
 IDCLIENTE INT NOT NULL,
	INDEX(IDCLIENTE),
	FOREIGN KEY (IDCLIENTE) REFERENCES CLIENTES(IDCLIENTE),
PRIMARY KEY(IDEMPLEADO)
);

CREATE TABLE ARTICULO(
IDARTICULOS INT NOT NULL AUTO_INCREMENT,
NOMBRE VARCHAR(15) NOT NULL,
CODIGO INT NOT NULL,
DESCRIPCION VARCHAR(15) NOT NULL,
PRECIO INT NOT NULL,
CANTIDAD INT NOT NULL,
MARCA VARCHAR(15) NOT NULL,
PRIMARY KEY(IDARTICULOS)
);

CREATE TABLE COMPRAS(
IDCOMPRA INT NOT NULL AUTO_INCREMENT,
NUMEROCOMPRA INT NOT NULL,
FECHA INT NOT NULL,
CANTIDADDEPRODUCTO INT NOT NULL,
TOTAL INT NOT NULL,
FORMAPAGO VARCHAR(15) NOT NULL,

IDARTICULOS INT NOT NULL,
	INDEX(IDARTICULOS),
	FOREIGN KEY (IDARTICULOS) REFERENCES ARTICULO(IDARTICULOS),

IDEMPLEADO INT NOT NULL,
	INDEX(IDEMPLEADO),
	FOREIGN KEY (IDEMPLEADO) REFERENCES EMPLEADOS(IDEMPLEADO),
    
    IDCLIENTE INT NOT NULL,
	INDEX(IDCLIENTE),
	FOREIGN KEY (IDCLIENTE) REFERENCES CLIENTES(IDCLIENTE),

PRIMARY KEY(IDCOMPRA)
);
